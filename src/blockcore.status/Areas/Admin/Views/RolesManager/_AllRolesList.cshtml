@model IEnumerable<RoleAndUsersCountViewModel>

<div class="table-responsive">
    <table id="all-roles-list" class="table table-striped table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th class="text-center"> Role Name </th>
                <th class="text-center"> Number of members </th>
                <th class="text-center"> Role Management </th>
                <th class="text-center"> Manage role members </th>
                <th class="text-center"> Manage dynamic role accesses </th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No role found</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    var role = item.Role;
                    <tr>
                        <td class="text-center">@role.Name</td>
                        <td class="text-center">@item.UsersCount</td>
                        <td class="text-center">
                            <a href="#" id="btnEdit-@role.Id" data-edit-id="@role.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a href="#" id="btnDelete-@role.Id" data-delete-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-info" asp-action="UsersInRole" asp-route-id="@role.Id">
                               View and change member lists
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-success" asp-action="Index" asp-controller="DynamicRoleClaimsManager" asp-route-id="@role.Id">
                                View and modify dynamic access lists
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>