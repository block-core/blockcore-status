@model OrganizationInfoViewModel
<div class="card flex-md-row mb-4 box-shadow h-md-250">
    <img class="card-img-left flex-auto d-none d-md-block mt-2" src="@Model.AvatarUrl" alt="@Model.Name" style="height: 100px;">
    <div class="card-body d-flex flex-column align-items-start">
        <h3 class="mb-0 text-info">
            <a target="_blank" href="@Model.Apiurl">@Model.Name</a>
        </h3>
        <div class="mb-1 text-muted">@Model.Description</div>
        <a href="@Model.Blog">@Model.Blog</a>
    </div>
</div>



<div class="mb-3">
    <div class="row">
        @if (Model.Repositories != null)
        {
            @foreach (var item in Model.Repositories)
            {
                var IconColor = "scooter";

                if (item.OpenIssuesCount == 0)
                { IconColor = "scooter"; }

                if (item.OpenIssuesCount > 0 && item.OpenIssuesCount <= 10)
                { IconColor = "ohhappiness "; }

                if (item.OpenIssuesCount > 10 && item.OpenIssuesCount <= 50)
                { IconColor = "blooker"; }

                if (item.OpenIssuesCount > 50)
                { IconColor = "bloody"; }

                <div class="col-lg-6 col-md-12">
                    <div class="card mb-4 box-shadow">

                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal text-warning">
                                <a href="@item.RepositoryURL" target="_blank">
                                    @item.Name
                                </a>
                            </h4>
                        </div>
                        <div class="card-body">

                            <div class="d-flex">
                                <div>
                                    <h5 class="my-1 text-info">Last Version: @item.LastVersion</h5>
                                    <p class="mb-0 text-secondary">Pushed At: @item.PushedAt.ToLocalTime().ToString()</p>
                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-@IconColor text-white ms-auto" title="Open Issues Count: @item.OpenIssuesCount">
                                    <img src="~/images/github.svg" width="50" />
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>