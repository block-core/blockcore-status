@model List<IndexersViewModel>
@if (Model.Any())
{
	@foreach (var item in Model)
	{
		<div class="row mb-1">
			<div class="col-12">
				<ul class="list-group">
					@{
						var icon = item.IsActive ? "fas fa-check-circle text-success" : "fas fa-times-circle text-danger";
					}
					<li class="list-group-item list-group-item-action"><i class="@icon mx-3"></i>@item.Url</li>
				</ul>
			</div>
		</div>
	}
}