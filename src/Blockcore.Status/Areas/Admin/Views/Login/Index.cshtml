@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="card mt-5">
    <div class="card-header">
        <h5 class="card-title m-0">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              method="post"
              autocomplete="off">
            <partial name="_CustomValidationSummary" />
            <div class="form-group row">
                <label asp-for="Username" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col col-md-10">
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </span>
                        <input asp-for="Username" autocomplete="off" dir="ltr" class="form-control" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col col-md-10">
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-asterisk"></i></span>
                        </span>
                        <input asp-for="Password" dir="ltr" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <button type="submit" class="btn btn-info col-md-2">Login</button>
                </div>
            </div>
        </form>
    </div>
    <footer class="card-footer">
        <p class="mt-0 mb-0">
            <a asp-action="Index" asp-controller="ForgotPassword">Forgot your password?</a>
        </p>
    </footer>
</div>