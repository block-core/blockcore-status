@using blockcore.status.ViewModels.Github
@model OrganizationViewModel
<partial name="_CustomValidationSummary" />
<form asp-action="AddOrganization" method="post">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">             
                @if (Model.OrganizationId == 0)
                {
                    <h4 class="modal-title">New Organization</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit Organization</h4>
                }  
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label asp-for="Login" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="OrganizationId" />
                        <input dir="ltr" asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Submit</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
        </div>
    </div>
</form>